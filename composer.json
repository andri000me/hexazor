{
    "name": "esyede/hexazor",
    "type": "project",
    "description": "Framework PHP mungil dan sederhana",
    "keywords": ["psr4", "framework", "microframework", "tiny", "lightweight"],
    "license": "MIT",
    "homepage": "https://esyede.github.io/hexazor",
    "support": {
        "issues": "https://github.com/esyede/hexazor/issues",
        "source": "https://github.com/esyede/hexazor"
    },
    "authors": [
        {
            "name": "Suyadi",
            "email": "suyadi.1992@gmail.com"
        }
    ],
    "require": {
        "php": "^5.4.0 || ^7.0",
        "ext-mbstring": "*",
        "ext-openssl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8.35 || ^5.7"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "hexazor-key-generate": "@php ./hexazor key:generate",
        "hexazor-run-test": "@php ./vendor/bin/phpunit tests/"
    }
}
